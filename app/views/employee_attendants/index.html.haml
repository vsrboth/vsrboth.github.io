.row
  .col-md-3
    .bs-sidebar.affix{role: 'complementary'}
      %ul.nav.nav-pills.nav-stacked
        %li{ class: "active" }
          = link_to "Attendant List", employee_attendants_path
        %li
          = link_to "Checkin Time", new_employee_attendants_checkin_path
        %li
          = link_to "Checkout Time", new_employee_attendants_checkout_path
  .col-md-9
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          Employee Attendant
      .panel-body
        - if @employee_attendants.empty?
          = render 'shared/none', { title: 'Noone has checked in yet.', link_text: '', link_url: nil }
        - else
          %table.table.table-hover
            %thead
              %th #
              %th Employee
              %th Checkin Time
              %th Status
              %th
              %th Checkout Time
              %th Status
              %th
            %tbody
              - @employee_attendants.each_with_index do |employee, index|
                %tr
                  %td= index + 1
                  %td= employee.full_name
                  %td= format_datetime(employee.checkin_time)
                  %td= employee.checkin_status
                  %td
                    - if employee.checkin_status.eql? 'pending'
                      = link_to checkin_approve_employee_attendants_path(employee.staff_id), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Approve', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-ok-sign
                      = link_to checkin_deny_employee_attendants_path(employee.staff_id), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Deny', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-remove-sign
                  %td= format_datetime(employee.checkout_time)
                  %td= employee.checkout_status
                  %td
                    - if employee.checkout_status.eql? 'pending'
                      = link_to checkout_approve_employee_attendants_path(employee.staff_id), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Approve', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-ok-sign
                      = link_to checkout_deny_employee_attendants_path(employee.staff_id), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Deny', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-remove-sign