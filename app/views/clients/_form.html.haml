= simple_form_for @client, html: { class: 'box-content' }, url: url do |f|

  - if f.error_notification
    .alert.alert-danger.fade.in
      = link_to 'Ã—', '#', class: 'close', 'data-dismiss' => 'alert'
      = f.error_notification

  .form-elements
    = f.input :title, collection: ['Mr.', 'Ms.', 'Miss.'], prompt: 'Please select title', input_html: { class: 'field-long' }
    = f.input :first_name, input_html: { class: 'field-long' }
    = f.input :last_name, input_html: { class: 'field-long' }
    = f.input :gender, collection: ['Male', 'Female', 'Other'], prompt: 'Please select gender', input_html: { class: 'field-long' }
    = f.input :birth_date, input_html: { class: 'field-long', 'data-behaviour' => 'datepicker'}
    = f.input :occupation, input_html: { class: 'field-long' }
    = f.input :address, as: :text, input_html: { class: 'field-long' }
    = f.input :remark, as: :text, input_html: { class: 'field-long' }

    = f.label 'Client contact info'
  .form-actions
    // nested model
    = f.simple_fields_for :communications do |builder|
      = render 'shared/forms/communication', f: builder
    = link_to_add_fields 'Add Communication', f, :communications
  .form-actions
    = f.submit 'Save', class: 'btn btn-success', data: { disable_with: 'Saving...'}
    = link_to 'Cancel', clients_path, class: 'btn btn-default'
