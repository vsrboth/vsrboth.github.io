- content_for :service_item_sidebar_item, 'active'

.panel.panel-default
  .panel-heading
    %h3.panel-title
      Service Item
    .panel-heading-action
      = render 'search_service_item'
      = link_to new_service_item_path, class: 'btn btn-default btn-xs' do
        %span.glyphicon.glyphicon-plus
        Add New
  .panel-body
    - if @service_items.empty?
      = render 'shared/none', { title: 'No service item yet.', link_text: 'Add a service item', link_url: new_service_item_path }
    - else
      %table.table.table-hover
        %thead
          %th #
          %th Item
          %th Price
          %th Category
          %th
        %tbody
          - @service_items.each_with_index do |service_item, index|
            %tr
              %td= index + 1
              %td= service_item.item
              %td= number_to_currency(service_item.price)
              %td= service_item.category.name
              %td
                .pull-right
                  = link_to edit_service_item_path(service_item), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'} } do
                    %span.glyphicon.glyphicon-pencil
                  = link_to service_item_path(service_item), { class: 'link_action btn btn-default btn-xs', data: { confirm: 'Do you want to delete this category?', method: :delete, original_title: 'Delete', rel: 'tooltip'}} do
                    %span.glyphicon.glyphicon-trash
      = will_paginate @service_items