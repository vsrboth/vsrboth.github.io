.row
  .col-md-3
    .bs-sidebar.affix{role: 'complementary'}
      %ul.nav.nav-pills.nav-stacked
        %li{ class: "active" }
          = link_to "Employee Profile", employees_path
        %li
          = link_to "Employee Position", positions_path
  .col-md-9
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          Employee Profile
          .pull-right
            = link_to new_employee_path, class: 'btn btn-default btn-xs' do
              %span.glyphicon.glyphicon-plus
              Add New

      .panel-body
        - if @employees.empty?
          = render 'shared/none', { title: 'No employee profile.', link_text: 'Add a new employee profile', link_url: new_employee_path }
        - else
          %table.table.table-hover
            %thead
              %th #
              %th Name
              %th Gender
              %th Birthdate
              %th Position
              %th
            %tbody
              - @employees.each_with_index do |employee, index|
                %tr
                  %td= index + 1
                  %td= employee.full_name
                  %td= employee.gender
                  %td= Date.parse(employee.birthdate).strftime('%d-%b-%Y')
                  %td= employee_position(employee)
                  %td
                    .pull-right
                      = link_to employee_path(employee), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'View', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-eye-open
                      = link_to edit_employee_path(employee), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-pencil
                      = link_to employee_path(employee), { class: 'link_action btn btn-default btn-xs', data: { confirm: 'Do you want to delete this category?', method: :delete, original_title: 'Delete', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-trash
          = will_paginate @employees, class: 'apple_pagination'