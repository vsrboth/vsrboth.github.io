.row
  .col-md-4.col-md-offset-4
    .panel.panel-primary
      .panel-heading
        %h2.panel-title
          Sign in
      .panel-body{ style: 'margin: 0 auto;'}
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            %p.text-danger
              = flash[:alert]

          = f.input :email, required: false, autofocus: true
          = f.input :password, required: false
          - if devise_mapping.rememberable?
            = f.label :remember_me, :as => :boolean, class: 'checkbox' do
              = f.check_box :remember_me
              Remember me
          .form-actions
            = f.button :submit, "Sign in", class: 'btn btn-success', data: { disable_with: 'Signing in...' }

        = render 'devise/shared/links'