.row
  .col-md-3
    .bs-sidebar.affix{role: 'complementary'}
      %ul.nav.nav-pills.nav-stacked
        %li
          = link_to "Employee Profile", employees_path
        %li{ class: 'active' }
          = link_to "Employee Position", positions_path
  .col-md-9{ class: "active" }
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          Employee Position
        .panel-heading-action
          - unless @positions.empty?
            = link_to new_position_path, class: 'btn btn-default btn-xs' do
              %span.glyphicon.glyphicon-plus
              Add New
      .panel-body
        - if @positions.empty?
          = render 'shared/none', { title: 'No employee position yet!', link_text: 'Add a new position', link_url: new_position_path }
        - else
          %table.table.table-hover
            %thead
              %th #
              %th Title
              %th
            %tbody
              - @positions.each_with_index do |position, index|
                %tr
                  %td= index + 1
                  %td= position.title
                  %td
                    .pull-right
                      = link_to edit_position_path(position), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-pencil
                      = link_to position_path(position), { class: 'link_action btn btn-default btn-xs', data: { confirm: 'Do you want to delete this position?', method: :delete, original_title: 'Delete', rel: 'tooltip'}} do
                        %span.glyphicon.glyphicon-trash
          = will_paginate @positions, class: 'apple_pagination'