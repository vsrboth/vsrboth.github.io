- content_for :product_category_sidebar_item, 'active'

%ol.breadcrumb
  %li= link_to 'Product Category', service_categories_path
  %li.active Service Item

.panel.panel-default
  .panel-heading
    %h3.panel-title
      = "Category :. #{@category.name}"

  .panel-body
    %table.table.table-hover
      %thead
        %th #
        %th Service
        %th Price
        %th
      %tbody
        - @category.service_items.each_with_index do |item, index|
          %tr
            %td= index + 1
            %td= item.item
            %td= number_to_currency(item.price)
            %td
              .pull-right
                = link_to nil, { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'} } do
                  %span.glyphicon.glyphicon-pencil
                = link_to nil, { class: 'link_action btn btn-default btn-xs', data: { confirm: 'Do you want to delete this category?', method: :delete, original_title: 'Delete', rel: 'tooltip'}} do
                  %span.glyphicon.glyphicon-trash
