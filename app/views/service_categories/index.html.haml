- content_for :product_category_sidebar_item, 'active'

.panel.panel-default
  .panel-heading
    %h3.panel-title
      Product Category
      .pull-right
        = link_to new_service_category_path, class: 'btn btn-default btn-xs' do
          %span.glyphicon.glyphicon-plus
          Add New
  .panel-body
    - if @categories.empty?
      = render 'shared/none', { title: 'No service category yet.', link_text: 'Add a new category', link_url: new_service_category_path }
    - else
      %table.table.table-hover
        %thead
          %th #
          %th Category Name
          %th
        %tbody
          - @categories.each_with_index do |category, index|
            %tr
              %td= index + 1
              %td= category.name
              %td
                .pull-right
                  = link_to service_category_path(category), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'View', rel: 'tooltip' }} do
                    %span.glyphicon.glyphicon-eye-open
                  = link_to edit_service_category_path(category), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'} } do
                    %span.glyphicon.glyphicon-pencil
                  = link_to service_category_path(category), { class: 'link_action btn btn-default btn-xs', data: { confirm: 'Do you want to delete this category?', method: :delete, original_title: 'Delete', rel: 'tooltip'}} do
                    %span.glyphicon.glyphicon-trash
      = will_paginate @categories