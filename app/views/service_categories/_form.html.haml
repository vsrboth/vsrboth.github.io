= simple_form_for @category, html: { class: 'box-content' }, url: url do |f|

  - if f.error_notification
    .alert.alert-danger.fade.in
      = link_to 'Ã—', '#', class: 'close', 'data-dismiss' => 'alert'
      = f.error_notification

  .form-elements
    = f.input :name, input_html: { class: 'field-long' }

  // nested model
  - if params[:action].eql? 'new'
    .form-elements
      = link_to_add_fields 'Add Product Item', f, :service_items

  .form-actions
    = f.submit 'Save', class: 'btn btn-success', data: { disable_with: 'Saving...' }
    = link_to 'Cancel', service_categories_path, class: 'btn btn-default'