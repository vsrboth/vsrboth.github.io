= simple_form_for @membership_scoring, html: { class: 'box-content' }, url: url do |f|

  - if f.error_notification
    .alert.alert-danger.fade.in
      = link_to 'Ã—', '#', class: 'close', 'data-dismiss' => 'alert'
      = f.error_notification

  .form-elements
    = f.label 'First Operand'
    .input-group
      %span.input-group-addon $
      = f.input_field :first_operand, input_html: { class: 'field-long' }
    = f.input :operator, collection: MembershipScoringCondition::OPERATORS, prompt: 'Please select operator', input_html: { class: 'field-long' }
    = f.label 'Second Operand'
    .input-group
      %span.input-group-addon $
      = f.input_field :second_operand, input_html: { class: 'field-long' }
    = f.input :score, input_html: { class: 'field-long' }
  .form-actions
    = f.submit 'Save', class: 'btn btn-success', data: { disable_with: 'Saving...' }
    = link_to 'Cancel', membership_scoring_conditions_path, class: 'btn btn-default'