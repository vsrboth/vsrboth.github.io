- content_for :membership_scoring_sidebar_item, 'active'

.panel.panel-default
  .panel-heading
    %h3.panel-title
      Membership Scoring Condition
    .panel-heading-action
      = link_to new_membership_scoring_condition_path, class: 'btn btn-default btn-xs' do
        %span.glyphicon.glyphicon-plus
        Add New
  .panel-body
    - if @membership_scoring.empty?
      = render 'shared/none', { title: 'No membership scoring condition yet.', link_text: 'Add a new condition', link_url: new_membership_scoring_condition_path }
    - else
      %table.table.table-hover
        %thead
          %th #
          %th First Operand
          %th Operator
          %th Second Operand
          %th Score
          %th
        %tbody
          - @membership_scoring.each_with_index do |membership, index|
            %tr
              %td= index + 1
              %td= number_to_currency(membership.first_operand)
              %td= membership.operator
              %td= number_to_currency(membership.second_operand)
              %td= membership.score
              %td
                .pull-right
                  = link_to edit_membership_scoring_condition_path(membership), { class: 'link_action btn btn-default btn-xs', data: { original_title: 'Edit', rel: 'tooltip'}} do
                    %span.glyphicon.glyphicon-pencil
                  = link_to membership_scoring_condition_path(membership),  {class: 'link_action btn btn-default btn-xs', data: {:confirm => 'Do you want to delete this scoring condition?', :method => :delete, original_title: "Delete", rel: "tooltip"}} do
                    %span.glyphicon.glyphicon-trash
      = will_paginate @membership_scoring